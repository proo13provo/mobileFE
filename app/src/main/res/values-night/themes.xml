<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Màu nền -->
        <item name="android:colorBackground">#121212</item>

        <!-- Màu chủ đạo -->
        <item name="colorPrimary">#7FFFD4</item>
        <item name="colorPrimaryVariant">#66CDBB</item>
        <item name="colorOnPrimary">#121212</item>

        <!-- Màu phụ -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#121212</item>

        <!-- Text color -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Status bar & navigation bar -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>

        <!-- Customize MaterialComponents -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
</resources>
